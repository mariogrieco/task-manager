{
    "compilerOptions": {
        "types": [
            "vitest/globals"
        ],
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": [
        "src",
        "test",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}